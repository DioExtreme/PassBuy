{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "_comment": "The Dream Team - JSON schema for supermarket products",
  "title": "Array of products",
  "type": "array",
  "items": {
    "description": "Product details",
    "properties": {
      "product_id": {
        "description": "Unique identifier for a product",
        "type": "integer"
      },
      "category_id": {
        "description": "Identifier for a product category",
        "type": "integer"
      },
      "product_name": {
        "description": "Product name",
        "type": "string",
        "minLength": 5,
        "maxlength": 110
      },
      "product_img_url": {
        "description": "Image URL of a product",
        "type": "string",
        "maxlength": 255
      },
      "supermarket_prices": {
        "description": "Prices of a product across different supermarkets",
        "type": "array",
        "items": {
          "supermarket_id": {
            "description": "Unique identifier of a supermarket",
            "type": "integer"
          },
          "product_price": {
            "description": "Price of a product",
            "type": "number",
            "exclusiveMinimum": 0
          }
        },
        "minItems": 1
      }
    }
  },
  "minItems": 1,
  "required": [
    "product_id",
    "category_id",
    "product_name",
    "supermarket_prices",
    "supermarket_id",
    "product_price"
  ]
}
